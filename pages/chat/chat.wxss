/* pages/chat.wxss */
.search-list {
    background: #e9e9e9;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: auto;
}

.callback,
.enter {
    padding-bottom: 30rpx;
    position: relative;
}

.msg .p {
    float: right;
    padding: 25rpx;
    background: #fff;
    position: relative;
    border-radius: 30rpx;
    min-width: 500rpx;
    max-width: 700rpx;
    word-break: break-word;
    box-sizing: border-box;
}

.callback .msg,
.callback .msg .p {
    float: left;
    position: relative;
}

.enter:after,
.callback:after,
.msg:after {
    content: "";
    clear: both;
    display: table;
}

.enter .msg .p {
    background-color: #008000;
    color: #fff;
    padding: 20rpx 40rpx 20rpx 40rpx;
    border-bottom-right-radius: 0;
    min-width: 150rpx;
}


.search-item {
    display: table;
    width: 100%;
}

.search-form--bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1px solid #e9e9e9;
    width: 100%;
}

.form-item {
    display: flex;
    align-items: center;
    background: #fff;
}
.form-item .input{
    flex: 1;
}
.form-item .sendButton {
    padding: 10rpx 20rpx;
    color: #949494;
}

.form-item .verifyCodeButton.active {
    color: #3c71fb;
}

.pd-10 {
    padding: 20rpx;
}

.pd-20 {
    padding: 40rpx;
}